@using amti_bookShop.Data.Models
@model IEnumerable<Book>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <h2>Все книги</h2>
    @{
        foreach (var book in Model) {
            <h3>Название: @book.name</h3>
            <p>Цена: @book.price.ToString("c")</p>
            <p>Автор: @book.author</p>
        }
    }
</body>
</html>
